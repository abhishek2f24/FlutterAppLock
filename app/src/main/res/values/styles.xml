<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="AppText.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppText.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="PinDotStyle">
    <item name="android:layout_width">12dp</item>
    <item name="android:layout_height">12dp</item>
    <item name="android:background">@drawable/pin_dot_selector</item>
    <item name="android:layout_margin">8dp</item>
</style>

<style name="PinButtonStyle">
    <item name="android:layout_width">64dp</item>
    <item name="android:layout_height">64dp</item>
    <item name="android:textSize">18sp</item>
    <item name="android:layout_margin">6dp</item>
</style>

</resources>

